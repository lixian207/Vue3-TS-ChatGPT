{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "shims/**/*.d.ts"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
